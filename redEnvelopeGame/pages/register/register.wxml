<!--pages/register/register.wxml-->
<view>
  <view class='g-reg'>
    <view class='wrapper'>
      <image src='/images/register-bg.png' class='bg-pic'></image>
    </view>
    <button class='btn-reg'>快速注册</button>
  </view>

  <view class='g-submit'>
    <view class='wrapper'>
      <view class='m-data-box position-center'>
        <view class='u-name'>
          <text style='white-space:nowrap'>贵姓：</text>
          <input type='text' class='name-input' name='uName' bindinput='getIptVal'></input>                
        </view>
        <view class='u-sex' bindtap="pickTap">
          <view class='triangle-down'></view>
          <input class='sex-man' value="{{ sexPick ? sexPick : sex[0] }}" name='uSex' disabled='true' data-text="{{ sexPick ? sexPick : '先生' }}" bindtap='getUsex'></input>
          <view  class="pick-list" wx:if="{{ showView % 2 === 0 }}">
            <input wx:for='{{ sex }}' wx:for-item="item" wx:key="item" class='pick-item man' value='{{ item }}' data-text='{{ item }}' disabled='true' catchtap='selectItemTap'></input>
          </view>
        </view>
      </view>
    </view>
    <button class='btn-reg' bindtap='submitTap'>提交</button>
  </view>
</view>