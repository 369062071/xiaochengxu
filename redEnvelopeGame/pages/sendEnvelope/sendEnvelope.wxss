/* pages/sendEnvelope/sendEnvelope.wxss */
.container {
  padding: 30rpx;
  font-size: 14px;
}
.m-bg {
  width: 100%;
  height: 442rpx;
  position: relative;
}
.u-bg-pic {
  width: 100%;
  height: 100%;
}
.u-change{
  padding: 12rpx 20rpx;
  border-radius: 26rpx;
  font-size: 30rpx;
  background: rgba(255,255,255, .7);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.u-item {
  display: flex;
  align-items: center;
  height: 86rpx;
  margin-bottom: 40rpx;
  padding:0 44rpx;
  border-radius: 8px;
  color: #fff;
  background: #e4414b;
}
.u-item text{

  white-space: nowrap;
}
.u-item input{
  text-align: right;
}
input::-moz-placeholder{
  color: #fff;
}
.chang-type{
  margin: -20rpx 0 40rpx 40rpx;
  font-size: 12px;
  color: #888;
}
.g-footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
}
.footer-item{
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: #282828;
}
.btn-wrapper{
  padding-top: 40rpx;
}
.btn-send{
  height: 86rpx;
  line-height: 86rpx;
  font-size: 14px;
  color: #fff;
  background: #00b466;
 
}
.u-hint{
  margin-top: 20rpx;
  text-align: center;
  color: #888;
}