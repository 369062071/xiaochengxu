/* pages/posts/post.wxss */
swiper{
  height: 500rpx;
}
swiper img{
  width: 100%;
  height: 100%;
}

.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10px 0 20rpx 10px;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 13px;
  margin-bottom: 5px;
}
.post-title{
  font-size: 17px;
  font-weight: 600;
  color: #333;
  margin: 0 0 10px 10px;
}
.post-image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 14px;
  margin: 0 0 10px 10px;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  display: flex;
  align-content: center;
  margin-left: 10px;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
}
.post-like-count{
  margin-right: 5px;
}