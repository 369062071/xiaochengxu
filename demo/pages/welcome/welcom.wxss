/* pages/welcome/welcom.wxss */
page{
  height: 100%;
  text-align: center;
  background: #b3d4db;
}
.welcome::before{
  content: '';
  display: table;
}
.user-avatar{
  display: block;
  width:200rpx;
  height: 200rpx;
  margin: 160rpx auto 0;
  border-radius: 50%;
}
.hello{
  display: inline-block;
  margin: 80rpx 0 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.moto{
  font-size: 20rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #406f80;
}
.moto-container{
  width: 200rpx;
  height: 80rpx;
  margin: 0 auto;
  border: 1px solid #406f80;
  border-radius: 8rpx;
}